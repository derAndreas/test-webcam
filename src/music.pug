doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    
    title DanceMusic
    
    link(href="style.css", rel="stylesheet")
  body
  
    figure
      video#video
      
      div.box.box-topleft.red#redbox(data-frequency="440")
      div.box.box-topright.blue#bluebox(data-frequency="330")
      div.box.box-bottomleft.yellow#yellowbox(data-frequency="220")
      div.box.box-bottomright.green#greenbox(data-frequency="110")
      
    figure
      canvas#motion.pixel
      figcaption Motion Heatmap
        br
        | Score  
        span#score
        
        
    button#start Start Video
    button#stop Stop Video
      
    
        
    script(src="https://webrtc.github.io/adapter/adapter-1.0.7.js")
    script(src="music.js")
